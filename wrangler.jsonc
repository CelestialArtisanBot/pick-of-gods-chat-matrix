{
  // Wrangler configuration for Pick of Gods Chat Matrix
  "name": "pick-of-gods-chat-matrix",
  "main": "src/index.ts",
  "compatibility_date": "2025-09-02",
  "compatibility_flags": [],
  "env": {
    "development": {
      "bindings": {
        "AI": { "type": "wasm", "name": "AI" },             // Cloudflare AI binding
        "OPENROUTER_KEY": { "type": "secret" },             // Secret AI model key
        "AUTH_STORAGE": { "type": "kv_namespace", "id": "<your-auth-storage-id>" },
        "DISPATCHER": { "type": "service", "name": "DISPATCHER" },
        "CLOUDFLARE_API_TOKEN": { "type": "secret" },
        "CLOUDFLARE_ACCOUNT_ID": { "type": "plain_text", "value": "<your-account-id>" },
        "READONLY": { "type": "kv_namespace", "id": "<your-readonly-id>" }
      }
    },
    "production": {
      "bindings": {
        "AI": { "type": "wasm", "name": "AI" },
        "OPENROUTER_KEY": { "type": "secret" },
        "AUTH_STORAGE": { "type": "kv_namespace", "id": "<your-auth-storage-id>" },
        "DISPATCHER": { "type": "service", "name": "DISPATCHER" },
        "CLOUDFLARE_API_TOKEN": { "type": "secret" },
        "CLOUDFLARE_ACCOUNT_ID": { "type": "plain_text", "value": "<your-account-id>" },
        "READONLY": { "type": "kv_namespace", "id": "<your-readonly-id>" }
      }
    }
  },
  "build": {
    "command": "npm run build",
    "cwd": ".",
    "watch_dirs": ["src"],
    "outDir": "./dist" // Match tsconfig.json outDir
  },
  "routes": [
    {
      "pattern": "pick-of-gods-chat-matrix.celestialartisanbot.workers.dev/*",
      "script": "pick-of-gods-chat-matrix"
    }
  ]
}
